<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageView_gallery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view_dim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#aa000000"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/imageView_gallery"
        app:layout_constraintEnd_toEndOf="@id/imageView_gallery"
        app:layout_constraintStart_toStartOf="@id/imageView_gallery"
        app:layout_constraintTop_toTopOf="@id/imageView_gallery" />

    <ImageView
        android:id="@+id/imageView_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:src="@drawable/custom_select_checkmark"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@id/imageView_gallery"
        app:layout_constraintBottom_toBottomOf="@id/imageView_gallery" />


</androidx.constraintlayout.widget.ConstraintLayout>