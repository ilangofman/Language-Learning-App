<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@android:color/white</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="fontFamily">@font/regular</item>
    </style>
    <!-- App with no action bar -->
<!--    <style name="NoActionBarTheme" parent="Theme.MaterialComponents.Light.NoActionBar">-->
    <style name="NoActionBarTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@android:color/white</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textViewStyle">@font/regular</item>
        <item name="buttonStyle">@style/ButtonStyleCustom</item>
<!--        <item name="android:buttonStyle">@font/regular</item>-->

        <!--        <item name="fontFamily">@font/regular</item>-->

    </style>

    <style name="NoActionBarTheme.NoActionBar" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="NoActionBarTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="NoActionBarTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="CircularDeterminantProgressBar">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/circle_progress_bar</item>
    </style>

    <style name="AlertDialogCustom" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:colorAccent">@color/colorPrimary</item>
    </style>

    <style name="ButtonStyleCustom" parent="Base.Widget.AppCompat.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/button_shape</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="fontFamily">@font/regular</item>
    </style>

    <style name="BottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:backgroundDimAmount">0</item>
<!--        <item name="background">@android:color/transparent</item>-->
<!--        <item name="bottomSheetStyle">@style/bottomSheetStyle</item>-->


        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:colorBackground">     @android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="bottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">36dp</item>
        <item name="cornerSizeTopLeft">36dp</item>
        <item name="background">@drawable/interactive_question_shape</item>
    </style>
</resources>